{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": ["es2017"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "outDir": "lib",
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "target": "es2017",
        "noUnusedParameters": false,
        "strictBindCallApply": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}
